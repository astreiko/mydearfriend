<h2 style="text-align: center" class="item-showall-text bl-color"><%= @lang.find(30).string %>: <%= @q %></h2>
<br/>
<div class="container marketing">
<% Item.where(id: @results).each_with_index do |item, index| %>
        <% if ((index + 3) % 3) == 0 %>
        <div class="row">
        <% end %>
              <div class="col-lg-4"><center>
                    <%= link_to image_tag(Group.find(item.group_id).image, style:"width: 140px; height: 140px; object-fit: cover", class: "rounded-circle", alt: "Generic placeholder image"), showOne_item_path(:id => item.id, :group_id => item.group_id)%>
                    <br/><p><b><%= Group.find(item.group_id).title %></b></p>
                    <h6><%= link_to item.title, showOne_item_path(:id => item.id, :group_id => item.group_id) %></h6>
                    <p>
                    <%= link_to (@lang.find(37).string + " Â»"),showOne_item_path(:id => item.id, :group_id => item.group_id), class: "stretched-link btn btn-secondary", role: "button" %>
                    </p>
              </center></div><!-- /.col-lg-4 -->
        <% if ((index + 1) % 3) == 0 %>
        </div><!-- /.row -->
        <% end %>
<% end %>
</div>