<style>.navbar, .lang-style {display: none;}</style>
<div class="container container-width-50">
</br>
<center>
    <div><%= link_to image_tag("/assets/home.png", height: "50px"), root_path %></div>
    <br/>
	<h1 class="h3 mb-3 font-weight-normal"><%= @lang.find(2).string %></center></h1>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="field">
    <%= @lang.find(19).string %><br />
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="field">
    <%= @lang.find(20).string %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
  </div>

  <div class="field">
    <% if @minimum_password_length %>
    <% end %><br />
    <%= f.password_field :password, placeholder: "******" , autocomplete: "new-password", class: "form-control" %>
  </div>

  <div class="field"><br />
    <%= f.password_field :password_confirmation, placeholder: "******", autocomplete: "new-password", class: "form-control" %>
  </div>
</br>
  <div class="actions">
    <%= f.submit "ОК", class: "btn btn-lg btn-primary btn-block bl-b-color" %>
  </div>
<% end %>
<%= render "devise/shared/links" %>
</div>