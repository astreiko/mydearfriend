    <%= yield %>


</body>
<hr/>
<% if user_signed_in? %>
    <p class="text-mut" style="text-align: right;cursor:pointer">
        <a onclick="$.ajax({type: 'GET', dataType: 'json', url: '/users/style', data: {user_id: <%= current_user.id %>}, success: function(data){location.reload()}});"><% if current_user.style == "light" %>Dark style<% else %>Light style<% end %></a>
    </p>
<% end %>
</html>









